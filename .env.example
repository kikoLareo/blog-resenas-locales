# ===========================================
# CONFIGURACIÓN DE ENTORNO - BLOG RESEÑAS
# ===========================================

# ----------------------------------------
# SANITY CMS - Configuración requerida
# ----------------------------------------
# ID del proyecto Sanity (obtener desde sanity.io/manage)
NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id

# Dataset de Sanity (production, staging, development)
NEXT_PUBLIC_SANITY_DATASET=production

# Token de API de Sanity con permisos de lectura (para ISR)
SANITY_API_READ_TOKEN=your_sanity_read_token

# Token de API de Sanity con permisos de escritura (para revalidación)
SANITY_API_WRITE_TOKEN=your_sanity_write_token

# Webhook secret para revalidación automática
SANITY_REVALIDATE_SECRET=your_webhook_secret_key

# ----------------------------------------
# NEXT.JS - Configuración general
# ----------------------------------------
# URL base del sitio (para SEO y sitemap)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Entorno de ejecución
NODE_ENV=production

# ----------------------------------------
# SEO Y ANALYTICS
# ----------------------------------------
# Google Analytics ID (GA4)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Search Console verification
NEXT_PUBLIC_GSC_VERIFICATION=your_gsc_verification_code

# Google AdSense Publisher ID (opcional)
NEXT_PUBLIC_ADSENSE_PUBLISHER_ID=ca-pub-xxxxxxxxxxxxxxxx

# ----------------------------------------
# SOCIAL MEDIA Y SHARING
# ----------------------------------------
# URL de imagen por defecto para Open Graph
NEXT_PUBLIC_DEFAULT_OG_IMAGE=/og/default.jpg

# Información del sitio para metadatos
NEXT_PUBLIC_SITE_NAME="Blog de Reseñas Locales"
NEXT_PUBLIC_SITE_DESCRIPTION="Las mejores reseñas de restaurantes, cafés y locales en tu ciudad"

# Redes sociales del sitio
NEXT_PUBLIC_TWITTER_HANDLE=@yourblog
NEXT_PUBLIC_FACEBOOK_PAGE=https://facebook.com/yourblog

# ----------------------------------------
# CONFIGURACIÓN DE DESARROLLO
# ----------------------------------------
# Puerto de desarrollo (opcional, por defecto 3000)
PORT=3000

# Habilitar modo debug en desarrollo
DEBUG=false

# ----------------------------------------
# CONFIGURACIÓN DE PRODUCCIÓN
# ----------------------------------------
# Secret para NextAuth.js (si se implementa autenticación)
NEXTAUTH_SECRET=your_nextauth_secret

# URL canónica para NextAuth.js
NEXTAUTH_URL=https://your-domain.com

# ----------------------------------------
# CONFIGURACIÓN DE CORREO (opcional)
# ----------------------------------------
# Para notificaciones de contacto
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email de contacto del sitio
CONTACT_EMAIL=contacto@your-domain.com

# ----------------------------------------
# CONFIGURACIÓN DE CDN (opcional)
# ----------------------------------------
# Cloudinary para optimización de imágenes
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# ----------------------------------------
# CONFIGURACIÓN DE CACHE
# ----------------------------------------
# Redis para cache (opcional)
REDIS_URL=redis://localhost:6379

# Tiempo de revalidación ISR (en segundos)
REVALIDATE_TIME=3600

# ----------------------------------------
# CONFIGURACIÓN DE SEGURIDAD
# ----------------------------------------
# CORS origins permitidos
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate limiting (requests por minuto)
RATE_LIMIT_RPM=100

# ----------------------------------------
# CONFIGURACIÓN DE MONITOREO (opcional)
# ----------------------------------------
# Sentry para error tracking
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Vercel Analytics (si se despliega en Vercel)
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# ----------------------------------------
# NOTAS IMPORTANTES
# ----------------------------------------
# 1. Nunca subas el archivo .env con valores reales al repositorio
# 2. Las variables NEXT_PUBLIC_ son visibles en el cliente
# 3. Copia este archivo como .env.local para desarrollo
# 4. Para producción, configura las variables en tu plataforma de hosting
# 5. Regenera todos los secrets antes de ir a producción